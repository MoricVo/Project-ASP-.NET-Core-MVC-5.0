@model IEnumerable<Website_DatPhong_TrucTuyen.Models.TabDiadiem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="padding-bottom:15px;" class="card-title">Hoverable Table</h4>
            <h4 class="card-title">Dữ liệu địa chỉ(Location)!(My JDBC)</h4>

            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home"></i>Trang chủ</a>
                    <a asp-area="Admin" asp-controller="Admin_TabKhachhangs" asp-action="Index" class="breadcrumb-item"> Danh sách các tỉnh</a>
                    <span class="breadcrumb-item active">Chỉnh sửa dữ liệu</span>
                </nav>
            </div>

            <div class="btn-group ">
                <div class="col-lg-12 ">
                    <form class="d-flex" role="search">
                        <input style="max-width:250px;max-height:40px;" class="form-control me-2" type="search" placeholder="Bạn muốn tìm gì?" aria-label="Search">
                        <button style="max-width:100px;max-height:35px;" class="btn btn-outline-success" type="submit">Tìm</button>
                    </form>
                </div>
            </div>
            <div class="btn-group ">
                <div class="col-lg-10 ">
                    <select class="btn btn-inverse-primary btn-fw" style="max-width:250px;max-height:35px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;" asp-items="ViewBag.Loainguoidung1 ">
                        <option value="" disabled selected>Chọn vùng miền</option>
                    </select>
                </div>
            </div>
            <div class="btn-group " style="float:right;padding-right:26px;">
                <div class="col-lg-12 ">
                    <a asp-action="Create" type="button" style="max-width:250px;max-height:40px;" class="btn btn-inverse-warning btn-fw">Thêm địa chỉ+</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-light">Tùy chọn</th>
                            <th class="text-light">ID</th>
                            <th class="text-light">Tên địa điểm</th>
                            <th class="text-light">Hình ảnh</th>
                            <th class="text-light">SL tours</th>
                            <th class="text-light">Ngày đăng</th>
                          





                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr style="color:whitesmoke;">
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success">Tùy chọn</button>
                                            <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" id="dropdownMenuSplitButton3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <div style="border-radius: 5px; border: 2px solid #191C24; background-color: #16003B " class="dropdown-menu" aria-labelledby="dropdownMenuSplitButton3">
                                                <h6 style="text-align:center;" class="dropdown-header">----Chức năng----</h6>
                                                <a class="btn btn-outline-success btn-icon-text" asp-action="Edit" asp-route-id="@item.IdDiadiem"> Cập nhật <i class="mdi mdi-file-check btn-icon-append"></i></a> |
                                                <a class="btn btn-outline-primary btn-icon-text" asp-action="Details" asp-route-id="@item.IdDiadiem"> <i class="mdi mdi-file-check btn-icon-prepend"></i> Chi tiết</a> |
                                                <a class="btn btn-outline-danger btn-icon-text" asp-action="Delete" asp-route-id="@item.IdDiadiem">  <i class="mdi mdi-alert btn-icon-prepend"></i> Xóa</a>

                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-warning">@item.IdDiadiem</td>
                                    <td>@item.Tendiadiem</td>
                                    <td> @item.Hinhanh</td>
                                    <td>@item.SlTours</td>

                                    <td>@item.Ngaydang</td>
     


                                    @*<td class="text-danger"> 28.76% <i class="mdi mdi-arrow-down"></i></td>
                                        <td><label class="badge badge-danger">Pending</label></td>*@


                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

