@model Website_DatPhong_TrucTuyen.Models.TabBaiviet

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        .A1
        {
            
            object-fit:cover;
            border-radius:10px;
        }
    </style>
</head>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="padding-bottom:10px" class="card-title"> Chi tiết khách hàng</h4>
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home"></i>Trang chủ</a>
                        <a asp-area="Admin" asp-controller="Admin_TabBaiviets" asp-action="Index" class="breadcrumb-item"> Danh sách bài viết</a>
                        <span class="breadcrumb-item active">Chủ đề:<span class=" text-danger">@Model.IdChudeNavigation.Tenchude </span>  </span>
                    </nav>
                </div>
            </div>
            <h4 style="padding-bottom:1px" class="card-title"> Chi tiết bài viết</h4>


            <div style="padding-bottom:10px" class="table-responsive">
                <table class="table table-dark">

                    <tbody>
                        <tr>
                            <td><img class="A1" style="width:100px;height:100px" src="~/Image2/@Html.DisplayFor(Model=> Model.Hinhanh)" /> </td>

                        </tr>
                        <tr>

                            <td class="text-warning" style="color:whitesmoke;font-size:17px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:800"> Người đăng:@Model.IdNguoidungNavigation.Tennguoidung </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Chủ đề:@Model.IdChudeNavigation.Tenchude </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Tiêu đề:@Model.Tieude </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Nội dung:@Model.Noidung</td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Ghi chú:@Model.Ghichu </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Ngày đăng:@Model.Ngaydang </td>

                        </tr>

                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Lượt xem:@Model.Luotxem</td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Kiểm duyệt:@Model.Kiemduyet </td>

                        </tr>
                      

                    </tbody>
                </table>

            </div>
            <div>
                <a class="btn btn-success btn-rounded btn-fw" asp-action="Edit" asp-route-id="@Model.IdBaiviet">Chỉnh sửa</a> |
                <a class="btn btn-primary btn-rounded btn-fw" asp-action="Index"> Quay lại</a>
            </div>
        </div>
    </div>
</div>

