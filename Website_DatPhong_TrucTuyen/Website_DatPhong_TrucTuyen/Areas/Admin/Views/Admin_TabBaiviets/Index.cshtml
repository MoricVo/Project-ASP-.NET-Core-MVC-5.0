@model IEnumerable<Website_DatPhong_TrucTuyen.Models.TabBaiviet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="padding-bottom:15px;" class="card-title">Hoverable Table</h4>
            <h4 class="card-title">Dữ liệu bài viết!(My JDBC)</h4>

            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home"></i>Trang chủ</a>
                    <a asp-area="Admin" asp-controller="Admin_TabBaiviets" asp-action="Index" class="breadcrumb-item"> Danh sách bài viết</a>
                    <span class="breadcrumb-item active">Chỉnh sửa bài viết</span>
                </nav>
            </div>



            <div class="btn-group ">
                <div class="col-lg-12 ">
                    <form class="d-flex" role="search">
                        <input style="max-width:250px;max-height:40px;" class="form-control me-2" type="search" placeholder="Bạn muốn tìm gì?" aria-label="Search">
                        <button style="max-width:100px;max-height:35px;" class="btn btn-outline-success" type="submit">Tìm</button>
                    </form>
                </div>
            </div>
            <div class="btn-group ">
                <div class="col-lg-10 ">
                    <select class="btn btn-inverse-primary btn-fw" style="max-width:250px;max-height:35px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;" asp-items="ViewBag.Chude1 ">
                        <option value="" disabled selected>Chọn chủ đề</option>
                        <option value="all">All</option>
                    </select>
                </div>
            </div>
            <div class="btn-group ">
                <div class="col-lg-10 ">
                    <select class="btn btn-inverse-danger btn-fw" style="max-width:250px;max-height:35px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;" asp-items="ViewBag.TrangThai ">
                        <option value="" disabled selected>Chọn trạng thái</option>
                    </select>
                </div>
            </div>
            <div class="btn-group " style="float:right;padding-right:26px;">
                <div class="col-lg-12 ">
                    <a asp-action="Create" type="button" style="max-width:250px;max-height:40px;" class="btn btn-inverse-warning btn-fw">Thêm bài viết+</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                <span style="padding-right:70px" class="text-light">Chức năng </span>

                            </th>
                            <th class="text-light">Hình ảnh</th>
                            <th class="text-light">ID bài viết</th>
                            <th class="text-light">Người đăng</th>
                            <th class="text-light">Chủ đề</th>
                            <th class="text-light">Tiêu đề</th>
                        




                            <th class="text-light">Kiểm duyệt</th>




                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                        <tr>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Tùy chọn</button>
                                    <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" id="dropdownMenuSplitButton3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <div style="border-radius: 5px; border: 2px solid #191C24; background-color: #16003B " class="dropdown-menu" aria-labelledby="dropdownMenuSplitButton3">
                                        <h6 style="text-align:center;" class="dropdown-header">----Chức năng----</h6>
                                        <a class="btn btn-outline-success btn-icon-text" asp-action="Edit" asp-route-id="@item.IdBaiviet"> Cập nhật <i class="mdi mdi-file-check btn-icon-append"></i></a> |
                                        <a class="btn btn-outline-primary btn-icon-text" asp-action="Details" asp-route-id="@item.IdBaiviet"> <i class="mdi mdi-file-check btn-icon-prepend"></i> Chi tiết</a> |
                                        <a class="btn btn-outline-danger btn-icon-text" asp-action="Delete" asp-route-id="@item.IdBaiviet">  <i class="mdi mdi-alert btn-icon-prepend"></i> Xóa</a>

                                    </div>
                                </div>
                            </td>
                            <td> <img width="900" height="600" src="~/Image2/@Html.DisplayFor(Model=> @item.Hinhanh)" /></td>

                            <td class="text-warning">@item.IdBaiviet</td>
                            <td>@item.IdNguoidungNavigation.Tennguoidung</td>
                            <td>@item.IdChudeNavigation.Tenchude</td>
                            <td>@item.Tieude</td>



                            @*<td> <img style="width:100px;height:100px" src="~/Image/@Html.DisplayFor(Model=> @item.Hinhanh)" /></td>*@

                            @if (item.Kiemduyet == 1)
                            {
                                <td class="text-success">@item.Kiemduyet</td>
                            }
                            else
                            {
                                <td class="text-danger">@item.Kiemduyet</td>
                            }
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



































