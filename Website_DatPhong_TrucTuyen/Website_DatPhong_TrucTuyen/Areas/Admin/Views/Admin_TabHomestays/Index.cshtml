@model IEnumerable<Website_DatPhong_TrucTuyen.Models.TabHomestay>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="padding-bottom:15px;" class="card-title">Hoverable Table</h4>
            <h4 class="card-title">Dữ liệu homsstay!(My JDBC)  </h4>

            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home"></i>Trang chủ</a>
                    <a asp-area="Admin" asp-controller="Admin_TabDiemdenThamquans" asp-action="Index" class="breadcrumb-item"> Danh sách các homestay</a>
                    <span class="breadcrumb-item active">Chỉnh sửa homestay</span>
                </nav>
            </div>
            <div class="btn-group ">
                <div class="col-lg-12 ">
                    <form class="d-flex" role="search">
                        <a style="max-width:100px;max-height:35px;" asp-area="Admin" asp-controller="Admin_TabNguoidungs" asp-action="TimKiem" class="btn btn-outline-success">Tìm kiếm</a>
                    </form>
                </div>
            </div>
            <div class="btn-group ">
                <div class="col-lg-10 ">
                    <select class="btn btn-inverse-primary btn-fw" style="max-width:250px;max-height:35px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;" asp-items="ViewBag.Loainguoidung1 ">
                        <option value="" disabled selected>Chọn tiện ích</option>
                    </select>
                </div>
            </div>
            <div class="btn-group ">
                <div class="col-lg-10 ">
                    <select class="btn btn-inverse-danger btn-fw" style="max-width:250px;max-height:35px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;" asp-items="ViewBag.TrangThai ">
                        <option value="" disabled selected>Chọn giá</option>
                    </select>
                </div>
            </div>
            <div class="btn-group " style="float:right;padding-right:26px;">
                <div class="col-lg-12 ">
                    <a asp-action="Create" type="button" style="max-width:250px;max-height:40px;" class="btn btn-inverse-warning btn-fw">Thêm homestay+</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-light">Tùy chọn</th>
                            <th class="text-light">Ảnh đại diện</th>
                            <th class="text-light">Mã phòng</th>
                            <th class="text-light">Chủ trọ</th>
                            <th class="text-light">Tỉnh</th>
                            <th class="text-light">Tiện ích chính</th>
                            <th class="text-light">Tên phòng</th>
                            <th class="text-light">SL tối đa người ở</th>
                            <th class="text-light">Địa chỉ cụ thể</th>
                            <th class="text-light">Tiêu đề</th>


                            <th class="text-light">Giá tiền</th>
                            <th class="text-light">Ngày đăng</th>



                            @*<th class="A1">
                                    <span style="padding-right:70px" class="text-light">Cập nhật </span>
                                    <span style="padding-right:60px" class="text-light">Chi tiết</span>
                                    <span class="text-light">Xóa</span>
                                </th>*@



                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr style="color:whitesmoke;">
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success">Tùy chọn</button>
                                            <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" id="dropdownMenuSplitButton3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <div style="border-radius: 5px; border: 2px solid #191C24; background-color: #16003B " class="dropdown-menu" aria-labelledby="dropdownMenuSplitButton3">
                                                <h6 style="text-align:center;" class="dropdown-header">----Chức năng----</h6>
                                                <a class="btn btn-outline-success btn-icon-text" asp-action="Edit" asp-route-id="@item.IdHomstay"> Cập nhật <i class="mdi mdi-file-check btn-icon-append"></i></a> |
                                                <a class="btn btn-outline-primary btn-icon-text" asp-action="Details" asp-route-id="@item.IdHomstay"> <i class="mdi mdi-file-check btn-icon-prepend"></i> Chi tiết</a> |
                                                <a class="btn btn-outline-danger btn-icon-text" asp-action="Delete" asp-route-id="@item.IdHomstay">  <i class="mdi mdi-alert btn-icon-prepend"></i> Xóa</a>

                                            </div>
                                        </div>
                                    </td>
                                    <td> <img border-radius="10px" width="1000" height="700" src="~/Image2/@Html.DisplayFor(Model=> @item.Hinhanh)" /></td>
                                    <td class="text-warning">@item.IdHomstay</td>
                                    <td>@item.IdNguoidungNavigation.Tennguoidung</td>
                                    <td>@item.IdDiadiemNavigation.Tendiadiem</td>
                          
                                    <td>@item.Tenhomestay</td>
                                    <td>@item.Slngayo</td>
                                    <td>@item.Diachicuthe</td>

                                    <td>@item.Tieude</td>
                                    <td>@item.Giatien.Value.ToString("#,##0") </td>

                                    <td>@item.Ngaydang.Value.ToString("	M/d/yyyy")</td>




                                    @*<td class="text-danger"> 28.76% <i class="mdi mdi-arrow-down"></i></td>
                                        <td><label class="badge badge-danger">Pending</label></td>*@

                                    @*<td>
                                            <a class="btn btn-outline-success btn-icon-text" asp-action="Edit" asp-route-id="@item.IdNguoidung"> Cập nhật <i class="mdi mdi-file-check btn-icon-append"></i></a> |
                                            <a class="btn btn-outline-primary btn-icon-text" asp-action="Details" asp-route-id="@item.IdNguoidung"> <i class="mdi mdi-file-check btn-icon-prepend"></i> Chi tiết</a> |
                                            <a class="btn btn-outline-danger btn-icon-text" asp-action="Delete" asp-route-id="@item.IdNguoidung">  <i class="mdi mdi-alert btn-icon-prepend"></i> Xóa</a>
                                        </td>*@
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>











