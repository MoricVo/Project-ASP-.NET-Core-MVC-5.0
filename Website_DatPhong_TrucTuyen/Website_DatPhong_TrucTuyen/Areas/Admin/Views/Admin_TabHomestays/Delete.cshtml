@model Website_DatPhong_TrucTuyen.Models.TabHomestay

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <style>
        .A1 {
            object-fit: cover;
            border-radius: 10px;
        }
    </style>
</head>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="padding-bottom:10px" class="card-title"> Chi tiết homestay</h4>
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home"></i>Trang chủ</a>
                        <a asp-area="Admin" asp-controller="Admin_TabDiemdenThamquans" asp-action="Index" class="breadcrumb-item"> Danh sách homestay</a>
                        <span class="breadcrumb-item active">Homestay:<span class=" text-danger">@Model.Tenhomestay </span>  </span>
                    </nav>
                </div>
            </div>
            <h4 style="padding-bottom:1px" class="card-title"> Chi tiết homestay:@Model.IdHomstay</h4>


            <div style="padding-bottom:10px" class="table-responsive">
                <table class="table table-dark">

                    <tbody>
                        <tr>
                            <td><img class="A1" style="width:100px;height:100px" src="~/Image/@Html.DisplayFor(Model=> Model.Hinhanh)" /> </td>

                        </tr>
                        <tr>

                            <td class="text-warning" style="color:whitesmoke;font-size:17px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:800"> Chủ nhà:@Model.IdNguoidungNavigation.Tennguoidung </td>

                        </tr>
                        <tr>

                            <td class="text-danger" style="color:whitesmoke;font-size:17px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:800"> Điạ điểm:@Model.IdDiadiemNavigation.Tendiadiem </td>

                            <
                      
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Tên nhà ở:@Model.Tenhomestay </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Số lượng tối đa người ở:@Model.Slngayo</td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Ngày đến:@Model.Ngayden </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Ngày đi:@Model.Ngaydi </td>

                        </tr>

                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Địa chỉ cụ thể:@Model.Diachicuthe</td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Tiêu đề:@Model.Tieude </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Nội dung:@Model.Noidung </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Nội quy:@Model.Noiquy </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Giá tiền:@Model.Giatien </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Ngày đăng:@Model.Ngaydang </td>

                        </tr>


                    </tbody>
                </table>

            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdHomstay" />
                <input type="submit" value="Xác nhận xóa" class="btn btn-danger btn-rounded btn-fw" /> |
                <a class="btn btn-primary btn-rounded btn-fw" asp-action="Index">Quay lại</a>
            </form>
        </div>
    </div>
</div>










