@model Website_DatPhong_TrucTuyen.Models.TabHomestay

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        .A1 {
            object-fit: cover;
            border-radius: 10px;
        }
    </style>
</head>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
