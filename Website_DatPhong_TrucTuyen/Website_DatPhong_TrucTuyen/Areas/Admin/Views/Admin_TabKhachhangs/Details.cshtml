@model Website_DatPhong_TrucTuyen.Models.TabKhachhang

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="padding-bottom:10px" class="card-title"> Chi tiết khách hàng</h4>
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home"></i>Trang chủ</a>
                        <a asp-area="Admin" asp-controller="Admin_TabKhachhangs" asp-action="Index" class="breadcrumb-item"> Danh sách khách hàng</a>
                        <span class="breadcrumb-item active">Chi tiết khách hàng:@Model.Tenkhachhang</span>
                    </nav>
                </div>
            </div>
            <h4 style="padding-bottom:1px" class="card-title"> Chi tiết khách hàng</h4>


            <div style="padding-bottom:10px" class="table-responsive">
                <table class="table table-dark">

                    <tbody>
                        <tr>

                            <td class="text-warning" style="color:whitesmoke;font-size:17px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:800"> Khách hàng:@Model.Tenkhachhang </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Số điện thoại:@Model.Sdt </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Địa chỉ:@Model.Diachi </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Email:@Model.Email </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500">Số lượng người ở:@Model.Slnguoio </td>

                        </tr>
                        <tr>
                            <td style="color:whitesmoke;font-size:14px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"> Ghi chú:@Model.Ghichu </td>

                        </tr>

                    </tbody>
                </table>

            </div>
            <div>
                <a class="btn btn-success btn-rounded btn-fw" asp-action="Edit" asp-route-id="@Model.IdKhachhang">Chỉnh sửa</a> |
                <a  class="btn btn-primary btn-rounded btn-fw" asp-action="Index"> Quay lại</a>
            </div>
        </div>
    </div>
</div>





