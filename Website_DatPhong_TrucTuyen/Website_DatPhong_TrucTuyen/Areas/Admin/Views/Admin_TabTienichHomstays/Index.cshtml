@model IEnumerable<Website_DatPhong_TrucTuyen.Models.TabTienichHomstay>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="padding-bottom:15px;" class="card-title">Hoverable Table</h4>
            <h4 class="card-title">Dữ liệu tiện ích!(My JDBC)</h4>

            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home"></i>Trang chủ</a>
                    <a asp-area="Admin" asp-controller="Admin_TabKhachhangs" asp-action="Index" class="breadcrumb-item"> Danh sách tiện ích</a>
                    <span class="breadcrumb-item active">Chỉnh sửa tiện ích</span>
                </nav>
            </div>


            <a asp-action="Create" type="button" class="btn btn-inverse-warning btn-fw">Thêm tiện ích+</a>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-light">ID</th>
                            <th class="text-light">Tên tiện ích</th>
                            <th class="text-light">Giá tiền</th>
                            <th class="text-light">Icon</th>                         
                            <th>
                                <span style="padding-right:70px" class="text-light">Cập nhật </span>
                                <span style="padding-right:60px" class="text-light">Chi tiết</span>
                                <span class="text-light">Xóa</span>
                            </th>



                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-warning">@item.IdTienich</td>
                                    <td>@item.Tentienich</td>
                                    <td>@item.Giatien</td>
                                    <td>@item.Icon</td>

                                   


                                    @*<td class="text-danger"> 28.76% <i class="mdi mdi-arrow-down"></i></td>
                                        <td><label class="badge badge-danger">Pending</label></td>*@

                                    <td>
                                        <a class="btn btn-outline-success btn-icon-text" asp-action="Edit" asp-route-id="@item.IdTienich"> Cập nhật <i class="mdi mdi-file-check btn-icon-append"></i></a> |
                                        <a class="btn btn-outline-primary btn-icon-text" asp-action="Details" asp-route-id="@item.IdTienich"> <i class="mdi mdi-file-check btn-icon-prepend"></i> Chi tiết</a> |
                                        <a class="btn btn-outline-danger btn-icon-text" asp-action="Delete" asp-route-id="@item.IdTienich">  <i class="mdi mdi-alert btn-icon-prepend"></i> Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>