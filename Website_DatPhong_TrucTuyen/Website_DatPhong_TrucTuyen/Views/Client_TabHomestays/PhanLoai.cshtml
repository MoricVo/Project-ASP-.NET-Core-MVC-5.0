@model IEnumerable<Website_DatPhong_TrucTuyen.Models.TabHomestay>

@{
    ViewData["Title"] = "PhanLoai";
    Layout = "~/Views/Shared/Layout_Homestays.cshtml";
}
<head>
   
</head>
<form style="width:200px;" asp-action="PhanLoai" method="get">
    <select asp-items="ViewBag.IdNguoidung" name="IdNguoidung" onchange="forms[0].submit()"></select>
</form>
<section class="ftco-section">
    <div class="container">
        <div class="container">

            <h3 style="padding-bottom:20px;font-weight:500;color:red;"><a href="#">Các nhà nghỉ phổ biến!</a></h3>
            <div class="row">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-4 ftco-animate">
                            <div class="project-wrap hotel">
                                <a asp-action="Details" asp-route-id="@item.IdHomstay" class="img" style="background-image: url(/Image2/@Html.DisplayFor(modelItem => item.Hinhanh));border-radius:15px;">
                                    <span class="price">@item.Giatien.Value.ToString("#,##0")VNĐ/Người</span>
                                </a>
                                <div style="width:300px;height:310px;" class="text p-4">
                                    <p class="star mb-2">
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star"></span>
                                    </p>
                                    <span class="days">Tours @item.Slngayo</span>
                                    <h3><a href="#">@item.Tenhomestay</a></h3>
                                    @*<p class="location"><span class="fa fa-map-marker"></span> @item.IdDiadiemNavigation.Tendiadiem</p>*@
                                    <ul>
                                        <li><span class="flaticon-shower"></span>2</li>
                                        <li><span class="flaticon-king-size"></span>3</li>
                                        <li><span class="flaticon-sun-umbrella"></span>Near Beach</li>
                                    </ul>
                                    <p style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-weight:500"><i class="fa-solid fa-calendar-days"></i> Cập nhật ngày:@item.Ngaydang.Value.ToString("	M/d/yyyy")</p>
                                </div>
                            </div>
                        </div>
                    }
                }
           

            </div>
        </div>
    </div>
</section>
