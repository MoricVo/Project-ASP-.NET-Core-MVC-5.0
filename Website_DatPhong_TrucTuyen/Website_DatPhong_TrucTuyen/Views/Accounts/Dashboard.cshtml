                                    <label>Email</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.Email</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>CMND</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.Cmnd</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>SDT</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.Sdt</p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            @await Html.PartialAsync("BaiVietCuaToi", DanhSachBaiViet)
                        </div>
                        <div class="tab-pane fade" id="profile1" role="tabpanel" aria-labelledby="profile-tab">
                            @await Html.PartialAsync("NhaNghiCuaToi", DanhSachNhaNghi)
                        </div>
                        <div class="tab-pane fade" id="profile5" role="tabpanel" aria-labelledby="profile-tab">
                            @await Html.PartialAsync("DiaDiemThamQuan", DanhSachDiaDiem)
                        </div>
                        <div class="tab-pane fade" id="profile9" role="tabpanel" aria-labelledby="profile-tab">
                            @await Html.PartialAsync("ChangePassword", changePassword1)
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

}
